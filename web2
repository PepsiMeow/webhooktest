local riftScrollCorner = Instance.new("UICorner")
riftScrollCorner.CornerRadius = UDim.new(0, 5)
riftScrollCorner.Parent = riftScrollFrame

local riftListLayout = Instance.new("UIListLayout")
riftListLayout.SortOrder = Enum.SortOrder.LayoutOrder
riftListLayout.Padding = UDim.new(0, 3)
riftListLayout.Parent = riftScrollFrame

-- Create rift checkboxes (more compact)
local riftCheckboxes = {}
for i, rift in ipairs(AVAILABLE_RIFTS) do
    local checkbox = Instance.new("TextButton")
    checkbox.Size = UDim2.new(1, -8, 0, 28)
    checkbox.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    checkbox.Text = "âœ“ " .. rift.displayName
    checkbox.TextColor3 = Color3.fromRGB(255, 255, 255)
    checkbox.TextSize = 11
    checkbox.Font = Enum.Font.Gotham
    checkbox.TextXAlignment = Enum.TextXAlignment.Left
    checkbox.BorderSizePixel = 0
    checkbox.Parent = riftScrollFrame
    
    local padding = Instance.new("UIPadding")
    padding.PaddingLeft = UDim.new(0, 8)
    padding.Parent = checkbox
    
    local checkboxCorner = Instance.new("UICorner")
    checkboxCorner.CornerRadius = UDim.new(0, 4)
    checkboxCorner.Parent = checkbox
    
    -- Update initial state
    if riftSelections[rift.name] then
        checkbox.BackgroundColor3 = Color3.fromRGB(50, 200, 50)
        checkbox.Text = "âœ“ " .. rift.displayName
    else
        checkbox.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
        checkbox.Text = "â˜ " .. rift.displayName
    end
    
    riftCheckboxes[rift.name] = checkbox
end

-- Update scroll frame canvas size
riftScrollFrame.CanvasSize = UDim2.new(0, 0, 0, (#AVAILABLE_RIFTS * 31))

