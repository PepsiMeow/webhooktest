-- Rift checkboxes container (scrollable)
local riftScrollFrame = Instance.new("ScrollingFrame")
riftScrollFrame.Size = UDim2.new(1, 0, 0, 160)
riftScrollFrame.Position = UDim2.new(0, 0, 0, 68)
riftScrollFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
